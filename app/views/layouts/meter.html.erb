<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag "meter/favicon.png" %>
    <%= display_meta_tags site: ENV["website_title"] %>

    <!-- Google Fonts -->
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "admin", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "users", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "events", "data-turbo-track": "reload" %>

    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_importmap_tags %>
    <%= hotwire_livereload_tags %>
  </head>

  <body>
    <%= render "layouts/meter/header" %>
    <%= render "layouts/meter/sidebar" %>
    <%= render "layouts/meter/breadcrumb" %>
    <main id="main" class="main">
      <%= bootstrap_flash_messages %>
      <%= render "layouts/meter/breadcrumb" %>
      <%= yield %>
    </main>
    <%= render "layouts/meter/footer" %>
  </body>
</html>
